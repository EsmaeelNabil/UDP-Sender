<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.esmaeelnapil.rcudp.MainActivity"
    android:background="@drawable/haha">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:weightSum="1"
                android:background="#252525">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="All the Info"
                    android:id="@+id/textView"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Waiting .."
                    android:id="@+id/textView1"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fefefe"
                    android:textStyle="bold"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:baselineAligned="false"
                android:focusable="false"
                android:longClickable="false"
                android:background="#320c0c0c">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageButton"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/thermometerr"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="2dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/temperature"
                    android:id="@+id/textView5"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_vertical"
                    android:text="----"
                    android:textColor="#fefefe"
                    android:textStyle="normal"
                    android:textIsSelectable="true"
                    android:typeface="monospace"
                    android:layout_marginLeft="60dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="#320c0c0c">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageButton2"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/diaper"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="2dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/diaper_state"
                    android:id="@+id/textView6"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_vertical"
                    android:text="----"
                    android:textColor="#fefefe"
                    android:textStyle="normal"
                    android:textIsSelectable="true"
                    android:typeface="monospace"
                    android:layout_marginLeft="60dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="#320c0c0c">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageButton3"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/weight"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="2dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="BB Weight"
                    android:id="@+id/textView7"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_vertical"
                    android:text="----"
                    android:textColor="#fefefe"
                    android:textIsSelectable="true"
                    android:textStyle="normal"
                    android:typeface="monospace"
                    android:layout_marginLeft="60dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#161b1b1b">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                            android:text="Waiting For Local IP ...."
                            android:id="@+id/localip"
                            android:layout_gravity="center_vertical"
                            android:textColor="#fefefe"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="2dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Port : 8080"
                        android:id="@+id/textView8"
                        android:layout_gravity="left|center"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="1dp" />

                </LinearLayout>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton4"
                    android:layout_gravity="center"
                    android:background="@drawable/diaper"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="3.5dp"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <ImageButton
                android:background="@drawable/refresh"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btn1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
